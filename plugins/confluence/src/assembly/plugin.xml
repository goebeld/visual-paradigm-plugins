<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.github.vogoltsov.vp.plugins.visual-paradigm-confluence-plugin"
        name="Confluence"
        provider="Vitaly Ogoltsov"
        class="com.github.vogoltsov.vp.plugins.confluence.VPConfluencePlugin">

    <runtime>
    </runtime>

    <actionSets>

        <actionSet id="confluence.ActionSet1">
            <toolbar id="confluence.ActionSet1.Toolbar1"
                     orientation="north"
                     index="last"/>

            <action id="confluence.ActionSet1.export-diagram-as"
                    actionType="generalAction"
                    label="Export"
                    style="normal"
                    icon="icons/confluence/export_64x64.png"
                    toolbarPath="confluence.ActionSet1.Toolbar1/#">

                <actionController class="com.github.vogoltsov.vp.plugins.confluence.action.ExportDiagramAsActionController"/>
            </action>

            <action id="confluence.ActionSet1.open-confluence-server-settings"
                    actionType="generalAction"
                    label="Connect"
                    style="normal"
                    icon="icons/confluence/confluence_64x64.png"
                    toolbarPath="confluence.ActionSet1.Toolbar1/#">

                <actionController class="com.github.vogoltsov.vp.plugins.confluence.action.ServerConnectionActionController"/>
            </action>

        </actionSet>

    </actionSets>

</plugin>
